<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/backgroud"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LightSkyBlue"
                android:fontFamily="casual"
                android:paddingTop="10dp"
                android:text="DEMANDA"
                android:textAlignment="center"
                android:textAllCaps="true"

                android:textColor="@color/backgroud"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEsforco3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingTop="5dp"
                android:text="NOME DO PROJETO"
                android:textAllCaps="true"
                android:textSize="18dp"
                android:background="@color/text_normal"
                android:textColor="@color/theme_colorWindowBackground"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDemanda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />


            <TextView
                android:id="@+id/textViewEsforco2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="ESFORÇO"
                android:background="@color/text_normal"
                android:textColor="@color/theme_colorWindowBackground"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEsforco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/textViewEsforco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingTop="5dp"
                android:text="Quantidade de pessoas"
                android:textAllCaps="true"
                android:background="@color/text_normal"
                android:textColor="@color/theme_colorWindowBackground"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextQtdPessoas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />


            <TextView
                android:id="@+id/textViewEsforco5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:fontFamily="casual"
                android:paddingTop="5dp"
                android:text="Produtividade"
                android:background="@color/text_normal"
                android:textColor="@color/theme_colorWindowBackground"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editTextProdutividade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:digits="0123456789"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/textViewEsforco6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingTop="5dp"
                android:background="@color/text_normal"
                android:text="Data de início"
                android:textAllCaps="true"
                android:textColor="@color/theme_colorWindowBackground"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDtInicioProjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="2dp"
                android:background="@color/text_normal"
                android:orientation="vertical"
                android:padding="3dp">

                <CheckBox
                    android:id="@+id/checkBoxDDA"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="DDA"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/theme_colorWindowBackground" />

                <CheckBox
                    android:id="@+id/checkBoxBanco"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="casual"
                    android:text="Banco"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/theme_colorWindowBackground" />

                <CheckBox
                    android:id="@+id/checkBoxTest"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="casual"
                    android:text="Teste Desempenho"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/theme_colorWindowBackground" />

                <CheckBox
                    android:id="@+id/checkBoxInsumos"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="casual"
                    android:text="Insumos"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/theme_colorWindowBackground" />

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/botaoEstimar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/LightSkyBlue"
            android:fontFamily="casual"
            android:text="ESTIMAR"
            android:textAllCaps="false"
            android:textColor="@color/backgroud"
            android:textSize="28sp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>